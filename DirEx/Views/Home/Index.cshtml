@model DirEx.Models.DirectoryViewModel

@{
    ViewBag.Title = "Index";
}

@ShowTree(Model.Entries)

@helper ShowTree(ICollection<DirEx.Models.EntryViewModel> entries)
{
	<ul>
		@foreach (var entry in entries)
		{
			<li>
				@entry.RelativeName
				@if (entry.Entries.Any())
				{
					@ShowTree(entry.Entries)
				}
			</li>
		}
	</ul>
}